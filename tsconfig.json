{
    "include": ["./src/**/*", "index.ts"],
    "compilerOptions": {
        "outDir": "./out",
        "target": "ES2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true
    },
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents"
    },
    "typedocOptions": {
        "out": "./docs",
        "entryPoints": ["src/**/*"],
        "entryPointStrategy": "expand",
        "cleanOutputDir": true
    }
}
